<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="De olho na Escola"
        android:textColor="?android:attr/textColorPrimaryInverse" />

    <TextView
        android:id="@+id/about_credits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dip"
        android:textSize="16sp"
        android:text="Este é um aplicativo que tem como objetivo fornecer informações sobre as
        receitas e despesas das escolas da rede estadual de ensino do Rio de Janeiro, além de
    prover a funcionalidade de submeter uma denúncia para a ouvidoria do Estado.
    Desenvolvido por Daniel Junior."
        android:autoLink="web"
        android:textColor="?android:attr/textColorPrimaryInverse" />
</LinearLayout>